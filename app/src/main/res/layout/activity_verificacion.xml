<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background_round"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5F4A8A">

        <TextView
            android:id="@+id/tv_codTelefono"
            style="@style/titulos"
            android:layout_width="351dp"
            android:layout_height="99dp"
            android:layout_marginTop="168dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="@string/introduciCodTelefono_ES"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_comprobarCodigo"
            style="@style/CustomButtonStyle"
            android:layout_width="351dp"
            android:layout_height="90dp"
            android:layout_marginBottom="108dp"
            android:backgroundTint="#755681"
            android:fontFamily="@font/bree_serif"
            android:text="@string/btnVerificarCodTelefono_ES"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etCodVerificacion"
            android:layout_width="230dp"
            android:layout_height="75dp"
            android:background="@drawable/caja_bordes"
            android:ems="10"
            android:fontFamily="@font/bree_serif"
            android:hint="0-0-0-0"
            android:inputType="text"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#5F4A89"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.547" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>