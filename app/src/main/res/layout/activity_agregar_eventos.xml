<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tituloVentana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poetsen"
            android:gravity="center_horizontal"
            android:text="AÃ±adir Evento al Calendario"
            android:textColor="#5F4A8B"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Titulo:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_Titulo_AE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="text"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Imagen:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_imgEvento"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/img_standard" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Descripcion:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_Desc_AE"
            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Descripcion del evento"
            android:hyphenationFrequency="normal"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Ubicacion:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_Ubi_AE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:ems="10"
            android:hint="Zaragoza"
            android:inputType="text"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Privacidad:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:scrollbarSize="6dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Fecha:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_Date_AE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:editable="false"
            android:ems="10"
            android:hint="26/02/2000"
            android:inputType="none"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Hora de Inicio:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_HI_AE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:editable="false"
            android:ems="10"
            android:hint="00:00"
            android:inputType="none"
            android:padding="8dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/bree_serif"
            android:text="Hora de Finalizacion:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_HF_AE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/caja_bordes"
            android:editable="false"
            android:ems="10"
            android:hint="00:00"
            android:inputType="none"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_Aceptar_AE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#5F4A8B"
            android:fontFamily="@font/poetsen"
            android:onClick="subirEvento"
            android:text="@string/btnAceptar_ES" />
    </LinearLayout>
</ScrollView>
