<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_codTelefono"
            style="@style/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="151dp"
            android:layout_marginBottom="115dp"
            android:text="@string/introduciTelefono_ES"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/ccp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/phone_number_edt"
            android:layout_width="245dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="408dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/ccp"
            android:layout_toRightOf="@id/ccp"
            android:background="@drawable/background_round"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ccp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="134dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="440dp"
            app:ccp_arrowSize="18sp"
            app:ccp_defaultNameCode="ar"
            app:ccp_hideNameCode="false"
            app:ccp_hidePhoneCode="false"
            app:ccp_keyboardAutoPopOnSearch="false"
            app:ccp_showFullName="false"
            app:ccp_textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_comprobarCodigo"
            android:layout_width="249dp"
            android:layout_height="85dp"
            android:layout_marginBottom="68dp"
            android:backgroundTint="#755681"
            android:fontFamily="@font/bree_serif"
            android:text="@string/btnAceptar_ES"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>