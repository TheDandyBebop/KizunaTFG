<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F4A8A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_codTelefono"
        style="@style/titulos"
        android:layout_width="326dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="@string/introduciTelefono_ES"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/phone_number_edt"
        style="@style/noTitulo"
        android:layout_width="190dp"
        android:layout_height="78dp"
        android:layout_above="@+id/btn_comprobarCodigo"
        android:layout_marginStart="8dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="146dp"
        android:layout_toEndOf="@id/ccp"
        android:layout_toRightOf="@id/ccp"
        android:background="@drawable/caja_bordes"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="10dp" />

    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="134dp"
        android:layout_height="90dp"
        android:layout_above="@+id/btn_comprobarCodigo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="344dp"
        android:layout_marginBottom="143dp"
        android:gravity="center_vertical"
        app:ccp_arrowSize="18sp"
        app:ccp_defaultNameCode="ar"
        app:ccp_hideNameCode="false"
        app:ccp_hidePhoneCode="false"
        app:ccp_keyboardAutoPopOnSearch="false"
        app:ccp_showFullName="false"
        app:ccp_textColor="#FFFFFF"
        app:ccp_textSize="18sp" />

    <Button
        android:id="@+id/btn_comprobarCodigo"
        style="@style/CustomButtonStyle"
        android:layout_width="325dp"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#755681"
        android:fontFamily="@font/bree_serif"
        android:text="@string/btnAceptar_ES"
        android:textSize="20sp" />

</RelativeLayout>
